<div class="container" style="margin-top:10rem">
  <p><h3 class="text-center"><%= t '.rooms' %></h3></p>

  <div class="btn-group col-md-4 offset-md-4">
    <%= link_to t('.new_room'), new_room_path(params[:locale]), class: 'btn btn-primary text-light' %>
  </div>

  <div class="list-group col-md-4 offset-md-4 pt-3">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(params[:locale], room), class: 'list-group-item list-group-item-action text-center' %>
    <% end %>
  </div>
</div>

