<div class="container" style="margin-top:10rem">
  <p><h3 class="text-center"><%= t('admins.index.name') %></h3></p>

  <div class="btn-group col-md-4 offset-md-4">
    <%= link_to t('.add_judge'), create_admin_path(params[:locale], @room), class: 'btn btn-primary text-light' %>
  </div>

  <table class="table table-striped">
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.user.name %></td>
        <td class="clickable" onclick="location.href='<%= edit_admin_path(locale: params[:locale], id: @room.id, admin_id: admin.id) %>'"><%= t '.edit' %></td>
        <td><%= link_to t('.delete'), admin_path(locale: params[:locale], id: @room.id, admin_id: admin.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>