<div class="container" style="margin-top:10rem">
  <p><h3 class="text-center">Judges</h3></p>

  <div class="btn-group col-md-4 offset-md-4">
    <%= link_to 'Add judge', create_admin_path(@room), class: 'btn btn-primary text-light' %>
  </div>

  <table class="table table-striped">
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.user.name %></td>
        <td class="clickable" onclick="location.href='<%= edit_admin_path(id: @room.id, admin_id: admin.id) %>'">Edit</td>
        <td><%= link_to 'Remove', admin_path(id: @room.id, admin_id: admin.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>