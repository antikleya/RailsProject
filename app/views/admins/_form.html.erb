<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="login-form bg-light mt-4 p-4">
      <h4><%= caption %></h4>
      <%= form_with(model: admin, url: url, class: 'row g-3') do |form| %>
        <% if admin.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

            <ul class="list-group">
              <% admin.errors.each do |error| %>
                <li class="list_group-item"><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field col-12">
          <%= form.label t('admins.new.name') %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="actions col-12">
          <%= form.submit class: 'btn btn-dark float-end' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>